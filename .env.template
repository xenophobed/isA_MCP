# ============================================
# isA MCP Environment Configuration Template
# ============================================
# 复制此文件为 .env 并填入实际值

# ============================================
# 基础配置
# ============================================
ENVIRONMENT=dev
AWS_REGION=us-east-1
NODE_ENV=development
PYTHONPATH=/app
PYTHONUNBUFFERED=1

# ============================================
# MCP Server Configuration
# ============================================
MCP_HOST=0.0.0.0
MCP_PORT=8082
MCP_SERVER_NAME=Enhanced Secure MCP Server

# User Service
USER_SERVICE_HOST=0.0.0.0
USER_SERVICE_PORT=8102

# Event Service  
EVENT_SERVICE_HOST=0.0.0.0
EVENT_SERVICE_PORT=8103

# ============================================
# 服务间通信配置
# ============================================
# ISA Model Service Configuration
ISA_SERVICE_URL=http://localhost:8082
ISA_API_KEY=your-model-service-api-key
REQUIRE_ISA_AUTH=false

# ============================================
# 数据库配置 (Supabase)
# ============================================
SUPABASE_CLOUD_URL=https://your-project.supabase.co
SUPABASE_CLOUD_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_CLOUD_ANON_KEY=your-anon-key
DATABASE_SCHEMA=dev

# 本地数据库 (可选)
SUPABASE_LOCAL_URL=http://localhost:54321
SUPABASE_LOCAL_SERVICE_ROLE_KEY=your-local-service-role-key
SUPABASE_LOCAL_ANON_KEY=your-local-anon-key

# ============================================
# AI API Keys
# ============================================
OPENAI_API_KEY=sk-your-openai-key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

GOOGLE_API_KEY=your-google-api-key

# ============================================
# 外部服务API Keys
# ============================================
OPENWEATHER_API_KEY=your-openweather-key
BRAVE_TOKEN=your-brave-search-key
STRIPE_SECRET_KEY=sk_test_your-stripe-key

# ============================================
# 安全配置
# ============================================
MCP_REQUIRE_AUTH=false
MCP_SECURITY_REQUIRE_AUTHORIZATION=true
MCP_SECURITY_AUTO_APPROVE_LOW=true
API_MASTER_KEY=your-api-master-key

# ============================================
# 日志配置
# ============================================
MCP_LOG_LOG_LEVEL=INFO
MCP_LOG_LOG_FILE=mcp_server.log
LOG_LEVEL=INFO
VERBOSE_LOGGING=false

# ============================================
# UI和浏览器配置
# ============================================
DISPLAY=:99
PLAYWRIGHT_BROWSERS_PATH=/opt/playwright-browsers

# ============================================
# 功能开关
# ============================================
DEBUG=false
ENABLE_ANALYTICS=true
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# ============================================
# 计费配置
# ============================================
CREDIT_TO_USD_RATE=0.01
MIN_CREDITS_PER_REQUEST=0.1
TOKEN_TO_USD_RATE=0.00001
TOKENS_PER_CREDIT=100

# MCP工具计费费率 (每次调用)
MCP_TOOL_BASE_CREDITS=0.5
IMAGE_GENERATION_CREDITS=5.0
WEB_SEARCH_CREDITS=1.0