# =============================================================================
# isA MCP - Staging Environment (K8s)
# =============================================================================
# Staging K8s cluster configuration
# Secrets should be injected via K8s Secrets, not in this file.
# =============================================================================

# Environment
ENV=staging
ISA_ENV=staging
PYTHONPATH=/app
PYTHONUNBUFFERED=1
DEBUG=false

# =============================================================================
# Service Configuration
# =============================================================================
SERVICE_NAME=mcp
SERVICE_PORT=8081
SERVICE_HOST=mcp-service.isa-cloud-staging.svc.cluster.local
MCP_PORT=8081
LOG_LEVEL=INFO
MAX_WORKERS=4

# =============================================================================
# Auth
# =============================================================================
REQUIRE_AUTH=true
REQUIRE_MCP_AUTH=true

# =============================================================================
# ISA Services (K8s internal)
# =============================================================================
ISA_MODEL_URL=http://model-service.isa-cloud-staging.svc.cluster.local:8082

# =============================================================================
# Infrastructure (K8s Internal Services)
# =============================================================================

# PostgreSQL (asyncpg)
POSTGRES_HOST=postgresql.isa-cloud-staging.svc.cluster.local
POSTGRES_PORT=5432
POSTGRES_DB=isa_platform

# Redis (redis-py async)
REDIS_HOST=redis-master.isa-cloud-staging.svc.cluster.local
REDIS_PORT=6379

# Qdrant (qdrant-client)
QDRANT_HOST=qdrant.isa-cloud-staging.svc.cluster.local
QDRANT_PORT=6333

# Neo4j (neo4j driver)
NEO4J_HOST=neo4j.isa-cloud-staging.svc.cluster.local
NEO4J_PORT=7687
NEO4J_USER=neo4j

# MinIO/S3 (aioboto3)
MINIO_HOST=minio.isa-cloud-staging.svc.cluster.local
MINIO_PORT=9000
MINIO_SECURE=false

# NATS (nats-py)
NATS_HOST=nats.isa-cloud-staging.svc.cluster.local
NATS_PORT=4222

# Consul (HTTP)
CONSUL_HOST=consul-server.isa-cloud-staging.svc.cluster.local
CONSUL_PORT=8500
CONSUL_ENABLED=true

# =============================================================================
# MCP Optimization
# =============================================================================
LAZY_LOAD_AI_SELECTORS=false
LAZY_LOAD_EXTERNAL_SERVICES=false
META_TOOLS_ONLY=true

# =============================================================================
# Staging Settings
# =============================================================================
ENABLE_RATE_LIMITING=true
LOKI_ENABLED=true
LOKI_URL=http://loki.isa-cloud-staging.svc.cluster.local:3100
