# =============================================================================
# isA MCP - Development Environment (Local)
# =============================================================================
# Local development configuration with Kind cluster infrastructure
# =============================================================================

# Environment
ENV=development
ISA_ENV=development
PYTHONPATH=.
PYTHONUNBUFFERED=1
DEBUG=true

# Proxy bypass
NO_PROXY=localhost,127.0.0.1,::1,0.0.0.0

# =============================================================================
# Service Configuration
# =============================================================================
SERVICE_NAME=mcp
SERVICE_PORT=8081
SERVICE_HOST=127.0.0.1
MCP_PORT=8081
LOG_LEVEL=INFO
MAX_WORKERS=2

# =============================================================================
# Auth (disabled for local dev)
# =============================================================================
REQUIRE_AUTH=false
REQUIRE_MCP_AUTH=false
REQUIRE_ISA_AUTH=false

# Internal Service Authentication (for service-to-service calls to isA_Model)
INTERNAL_SERVICE_SECRET=dev-internal-secret-change-in-production

# =============================================================================
# ISA Services (local)
# =============================================================================
ISA_API_URL=http://localhost:8082
ISA_SERVICE_URL=http://localhost:8082
ISA_MODEL_URL=http://localhost:8082

# =============================================================================
# Infrastructure (Native Ports - Kind NodePort)
# WARNING: Passwords below are for LOCAL development ONLY.
# Never reuse these credentials in shared/staging/production environments.
# =============================================================================

# PostgreSQL (asyncpg)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=isa_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=staging_postgres_2024

# Redis (redis-py async)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=staging_redis_2024

# Qdrant (qdrant-client)
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Neo4j (neo4j driver)
NEO4J_HOST=localhost
NEO4J_PORT=7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=staging_neo4j_2024

# MinIO/S3 (aioboto3)
MINIO_HOST=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=staging_minio_2024

# NATS (nats-py)
NATS_HOST=localhost
NATS_PORT=4222

# MQTT/EMQX (aiomqtt)
MQTT_HOST=localhost
MQTT_PORT=1883

# Consul (HTTP)
CONSUL_HOST=localhost
CONSUL_PORT=8500
CONSUL_ENABLED=true

# =============================================================================
# MCP Optimization
# =============================================================================
LAZY_LOAD_AI_SELECTORS=true
LAZY_LOAD_EXTERNAL_SERVICES=true
META_TOOLS_ONLY=false

# =============================================================================
# Local Dev Settings
# =============================================================================
ENABLE_RATE_LIMITING=false
LOKI_ENABLED=false
