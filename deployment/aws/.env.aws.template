# AWS Environment Configuration Template
# Copy this file to .env.aws and fill in your actual values

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-aws-account-id
DOMAIN_NAME=your-domain.com

# Application Configuration
NODE_ENV=production
PYTHONPATH=/app
PYTHONUNBUFFERED=1
DISPLAY=:99

# Database Configuration (Supabase)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Redis Configuration (if using external Redis)
REDIS_URL=redis://your-redis-url:6379

# Authentication (Auth0)
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_AUDIENCE=your-auth0-audience
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# Payment (Stripe)
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRO_PRICE_ID=price_your-pro-price-id
STRIPE_ENTERPRISE_PRICE_ID=price_your-enterprise-price-id

# JWT Secret
JWT_SECRET_KEY=your-jwt-secret-key

# Neo4j Configuration (if using Neo4j Cloud)
NEO4J_URI=neo4j+s://your-neo4j-url:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password

# Modal Cloud Configuration (for GPU inference)
MODAL_TOKEN_ID=your-modal-token-id
MODAL_TOKEN_SECRET=your-modal-token-secret

# Cloudflare Configuration (for storage)
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_BUCKET_NAME=your-r2-bucket-name

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# Feature Flags
REQUIRE_AUTH=true
DEBUG=false
ENABLE_ANALYTICS=true
ENABLE_RATE_LIMITING=true